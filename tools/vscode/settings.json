{
  // BEGIN - GENERATED CONTENT, DO NOT EDIT !!!

  // VSCode
  "extensions.autoUpdate": false,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },

  "files.eol": "\n",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.associations": {
    "*.snap": "log",
    "*.md": "markdown"
  },
  "files.exclude": {
    "build": true,
    "**/*.pyc": true
  },

  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[log]": {
    "files.trimTrailingWhitespace": false,
    "editor.formatOnSave": false
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.python",
    "editor.formatOnSave": true
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format",
    "editor.formatOnSave": true
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  "workbench.colorTheme": "Visual Studio Dark",

  // Prettier
  "prettier.bracketSpacing": true,
  "prettier.endOfLine": "lf",
  "prettier.htmlWhitespaceSensitivity": "css",
  "prettier.insertPragma": false,
  "prettier.jsxBracketSameLine": false,
  "prettier.jsxSingleQuote": false,
  "prettier.printWidth": 140,
  "prettier.proseWrap": "preserve",
  "prettier.quoteProps": "as-needed",
  "prettier.requirePragma": false,
  "prettier.semi": true,
  "prettier.singleQuote": true,
  "prettier.tabWidth": 2,
  "prettier.trailingComma": "all",
  "prettier.useTabs": false,
  "prettier.vueIndentScriptAndStyle": false,

  // Python
  "python.formatting.provider": "autopep8",
  "python.formatting.autopep8Args": ["--indent-size=2 --max-line-length=140"],
  "python.linting.enabled": true,
  "python.linting.lintOnSave": true,

  // Javascript
  "javascript.preferences.quoteStyle": "single",

  // Bash Beautify
  "bashBeautify.tabSize": 2,

  // Git blame
  "gitblame.infoMessageFormat": "${author.name} (${time.ago}): ${commit.summary}",
  "gitblame.statusBarMessageFormat": "${commit.hash_short,6} ${author.name} (${time.ago}): ${commit.summary}",

  // Terminal
  "terminal.integrated.shell.windows": "bash.exe",
  "terminal.integrated.shellArgs.windows": [
    "--init-file",
    "${env:HOME}/.bashrc"
  ],
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.scrollback": 10000,

  // Shell launcher for several terminal configuration
  "shellLauncher.shells.windows": [
    {
      "shell": "cmd.exe",
      "label": "cmd"
    },
    {
      "shell": "wsl.exe",
      "label": "WSL"
    },
    {
      "shell": "powershell.exe",
      "label": "PowerShell"
    },
    {
      "shell": "bash.exe",
      "args": ["--init-file", "${env:HOME}/.bashrc"],
      "label": "Git_bash"
    },
    {
      "shell": "${env:APPS_ROOT}/PortableApps/PuTTYPortable/App/putty/PUTTY.EXE",
      "args": ["-load", "config_name", "-t"],
      "label": "putty"
    }
  ],

  // CMake
  "cmake.cmakePath": "${env:APPS_ROOT}/PortableApps/CommonFiles/cmake/bin/cmake.exe",
  /*"cmake.mingwSearchDirs": [
        "${env:APPS_ROOT}/PortableApps/CommonFiles/gcc/x64/x86_64-w64-mingw32",
        "${env:APPS_ROOT}/PortableApps/CommonFiles/gcc/x64/bin",
        "${env:APPS_ROOT}/PortableApps/PortableGit/mingw64"
    ],*/
  /*"cmake.preferredGenerators": [
        "Unix Makefiles"
    ],*/
  "cmake.configureSettings": {
    "CMAKE_MAKE_PROGRAM": "${env:APPS_ROOT}/PortableApps/CommonFiles/gcc/x64/bin/make.exe",
    "CMAKE_GENERATOR": "Unix Makefiles"
  },
  //"cmake.generator": "Unix Makefiles",
  "cmake.buildDirectory": "${workspaceRoot}/build",
  "cmake.useCMakeServer": false,
  //"cmake-tools-helper.cmake_download_path": "${env:APPS_ROOT}/PortableApps/CommonFiles/cmake-3.10.1-win64-x64",

  // C/C++
  "C_Cpp.intelliSenseEngine": "Default",

  // END - GENERATED CONTENT, DO NOT EDIT !!!

  "http.proxyStrictSSL": true
}
